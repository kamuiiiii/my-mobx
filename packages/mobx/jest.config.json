{
  "roots": [
    "<rootDir>/src"
  ],
  "resetMocks": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "transform": {
    "^.+\\.[jt]sx?$": "babel-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!src/**/*.d.ts"
  ]
}